# Use the Ubuntu base image
FROM ubuntu:latest

# Install necessary packages
RUN apt-get update && apt-get install -y \
    xfce4 \
    xfce4-terminal \
    x11vnc \
    xvfb \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set a password for VNC
RUN mkdir ~/.vnc && \
    echo "bchcohenlab" | x11vnc -storepasswd -f ~/.vnc/passwd

# Expose the VNC port
EXPOSE 5900

# Start the VNC server
CMD ["sh", "-c", "vncserver :0 -geometry 1024x768 -depth 24 && tail -F ~/.vnc/*.log"]
